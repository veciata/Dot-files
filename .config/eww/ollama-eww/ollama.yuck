(defwindow ollama
  :geometry (geometry :x 100 :y 100 :width 800 :height 600)
  :stacking "fg"
  :border-radius 10
  :close-button true
  :focusable true
  (box
    :orientation "vertical"
    :spacing 10
    :halign "center"
    :valign "center"
    :padding 20
    (label :text "Ollama Output" :class "title")
    (textarea :id "ollama_output" :editable false :class "output")
    (box
      :orientation "horizontal"
      :spacing 10
      (entry :id "input_text" :class "input")
      (button
        :text "Submit"
        :onclick "eww update ollama_output='Loading...'; bash -c 'submit_query'"
      )
    )
  )
)
