[global]
  font = "Product Sans"

  # Format for notifications
  format = "<b>%s</b>\n%b"

  # Sort messages by urgency
  sort = yes

  # Show how many messages are currently hidden
  indicate_hidden = yes

  # Alignment of message text
  alignment = left

  # Disable bounce frequency (this option is no longer supported)
  # Removed: bounce_freq

  # Ellipsize long lines in the middle
  ellipsize = middle

  # Show age of message if older than the threshold
  show_age_threshold = -1

  # Split notifications into multiple lines
  word_wrap = yes

  # Ignore newlines in notifications
  ignore_newline = no

  # Geometry and size
  width = 320
  height = 50
  origin = top-right
  offset = (10, 16)

  # Progress bar
  progress_bar = true
  progress_bar_height = 14
  progress_bar_frame_width = 1
  progress_bar_min_width = 150
  progress_bar_max_width = 300

  # Frame settings
  frame_width = 3
  frame_color = "#333449"

  # Transparency
  transparency = 0

  # Monitor and idle settings
  idle_threshold = 0
  monitor = 0
  follow = none

  # Indicators
  show_indicators = no

  # Sticky history
  sticky_history = yes

  # Line and separator settings
  line_height = 8
  separator_height = 3
  padding = 16
  horizontal_padding = 12
  text_icon_padding = 16
  separator_color = frame

  # Removed: startup_notification

  # Icon settings
  icon_position = left
  min_icon_size = 32
  max_icon_size = 48
  corner_radius = 17

  # Always run rule-defined scripts
  always_run_script = true

  # Mouse actions
  mouse_left_click = close_current
  mouse_middle_click = do_action, close_current
  mouse_right_click = close_all

[songArtLogger]
  script = ~/.config/dunst/scripts/songArtLogger.sh

[urgency_low]
  timeout = 6
  background = "#0d0f16"
  foreground = "#CDD6F4"
  frame_color = "#333449"
  highlight = "#7ba5dd"

[urgency_normal]
  timeout = 6
  background = "#0d0f16"
  foreground = "#CDD6F4"
  frame_color = "#0d0f16"
  highlight = "#7ba5dd"

[urgency_critical]
  script = ~/.config/dunst/scripts/playNotificationSound.sh
  timeout = 6
  background = "#0d0f16"
  foreground = "#CDD6F4"
  frame_color = "#0d0f16"
  highlight = "#ee6a70"

[backlight]
  summary = "Backlight"
  highlight = "#ffb29b"
  set_stack_tag = "backlight"

[volume]
  summary = "Volume"
  set_stack_tag = "volume"

[volume-muted]
  summary = "Volume Muted"
  highlight = "#ee6a70"

[volume-unmuted]
  summary = "Volume Unmuted"
  highlight = "#ee6a70"
